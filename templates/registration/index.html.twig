{% extends 'layout.html.twig' %}
{% block title %} {{parent()}} | Inscription {% endblock %}
{% block meta %}
    <meta name="description" content="">
{% endblock %}

{% block dataStructured %}{% endblock %}

{% block stylesheets %}
  {{parent()}}
    <style type="text/css">
      .bg-success-alt{background: #fff}
      .container-plan h2, .container-plan h6{
        color: #fff;
      }
    </style>
{% endblock %}

{% block body %}

  <div data-overlay class="bg-gradient min-vh-100 bg-light d-flex flex-column justify-content-md-center o-hidden">
      <section class="py-3">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-4 col-lg-5 col-md-6 mb-5 mb-md-0">
              <div class="card card-body shadow">
                <h1 class="h5 text-center">Inscription</h1>
                {% if error is defined %}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    {{ form_errors(form) }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                {% endif %}
                
                  {{ form_start(form) }}
                  <div class="form-group">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder':'votre nom'}}) }}
                  </div>
                  <div class="form-group">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder':'votre e-mail'}}) }}
                  </div>
                  <div class="form-group">
                    {{ form_widget(form.password.first, {'attr': {'class':
                  'form-control', 'placeholder':'mot de passe'}}) }}
                  </div>
                  <div class="form-group">
                    {{ form_widget(form.password.second, {'attr': {'class':
                      'form-control', 'placeholder':'confirmer mot de passe'}}) }}
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox text-small">
                      <input type="checkbox" class="custom-control-input" id="sign-up-agree">
                      <label class="custom-control-label" for="sign-up-agree">Accepter les <a target="_blank" href="utility-legal-terms.html">Conditions d'utilisation</a>
                      </label>
                    </div>
                  </div>
                  <button class="btn btn-primary btn-block" type="submit" >Inscription</button>
                  {{ form_end(form) }}
              </div>
              <div class="text-center text-small mt-3" style="color:#fff">
                Vous avez deja un compte? <a href="{{path('app_login')}}" style="color:#fff">Connectez-vous ici</a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

{% endblock body %}

{% block javascripts %}
  {{parent()}}
{% endblock %}
